{
  "name": "argscape",
  "version": "0.1.0",
  "description": "ARGscape - Tree Sequence and ARG Visualization Tool",
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:local": "bash scripts/dev-local.sh",
    "build:desktop": "bash scripts/build-with-backend.sh",
    "build:desktop-fast": "bash scripts/build-with-backend.sh --skip-backend",
    "build:desktop-force": "bash scripts/build-with-backend.sh --force-backend",
    "bundle:backend": "python scripts/bundle-backend.py",
    "bundle:backend-force": "python scripts/bundle-backend.py --force",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build-fast": "cd frontend && npm run build && tauri build",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && pip install -r requirements-web.txt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chris-a-talbot/argscape.git"
  },
  "keywords": [
    "bioinformatics",
    "tree-sequences",
    "ARG",
    "visualization",
    "population-genetics"
  ],
  "author": "ARGscape Team",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@tauri-apps/api": "^2.5.0",
    "@tauri-apps/cli": "^2.5.0"
  }
}
